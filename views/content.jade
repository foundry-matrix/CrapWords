if blogposts
	each blogpost in blogposts
		div(class="indivpost")
			a(href="/delete")
				button(type="button" class="edit glyphicon glyphicon-pencil")
			a(href="/edit")
				button(type="button" class="delete glyphicon glyphicon-remove")
			div(class="img")
				img(src=blogpost.image)
			div(class="blogtext")
				a(href="/blogpost")
					h2 #{blogpost.title}
				p #{blogpost.text}
else
	h1 no blog posts